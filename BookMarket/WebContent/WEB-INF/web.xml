<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <security-role>
  	<role-name>role1</role-name>
  </security-role>
  <security-constraint>
	<web-resource-collection>
		<web-resource-name>WebProgrammingAlone</web-resource-name>
		<url-pattern>/login*</url-pattern><!-- login~으로 시작하는 웹페이지는 모두에게 권한이 부여됨. 즉 다른 페이지들은 login으로 시작하지 않아야 인증되지 않은 사용자들이 접근 할 수 없음.  -->
		<http-method>GET</http-method>
	</web-resource-collection>
	<auth-constraint>
		<description>회원가입은 모두에게 열려있음</description>
		<role-name>*</role-name>
	</auth-constraint>
  </security-constraint>
 
  <login-config>
  	<auth-method>FORM</auth-method>
  	<form-login-config>
  		<form-login-page>/login.jsp</form-login-page>
  		
  	</form-login-config>
  </login-config>

</web-app>